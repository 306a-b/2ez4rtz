<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical"
    android:paddingTop="8dp">


    <ImageView
        android:id="@+id/singerImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/likeButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/addToMeButton"
        android:scaleType="centerInside"
        android:src="@drawable/favorite22" />

    <ImageButton
        android:id="@+id/addPlaylistButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="false"
        android:scaleType="centerInside"
        android:src="@drawable/add_to_playlist" />

    <ImageButton
        android:id="@+id/addToMeButton"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_above="@+id/addPlaylistButton"
        android:layout_alignStart="@+id/addPlaylistButton"
        android:scaleType="centerInside"
        android:src="@drawable/plus" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="bottom"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/songName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="#a2000000"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:maxLines="1"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/artistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:background="#a2000000"
            android:ellipsize="end"
            android:gravity="center_vertical|end"
            android:maxLines="1"
            android:paddingEnd="3dp"
            android:paddingStart="3dp"
            android:textColor="#c8ffffff"
            android:textSize="18sp" />
    </LinearLayout>
</RelativeLayout>